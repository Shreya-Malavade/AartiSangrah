<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/aarti_bg1"
    tools:context=".btn1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- first aarti -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ga_heading1"
        android:text="सुखकर्ता दुखहर्ता"
        android:textStyle="bold"
        android:textSize="28sp"
        android:padding="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Button1"
        app:layout_constraintBottom_toBottomOf="@+id/Button1"/>

        <ImageView
            android:id="@+id/Button1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/keyboard_down_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ganesh_aarti1"
            android:id="@+id/text1"
            android:textStyle="bold"
            android:textSize="25sp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/ga_heading1"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/cornerview"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <!-- second aarti -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ga_heading2"
            android:text="जय गणेश,जय गणेश"
            android:textStyle="bold"
            android:textSize="28sp"
            android:padding="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Button2"
            app:layout_constraintBottom_toBottomOf="@+id/Button2"/>

        <ImageView
            android:id="@+id/Button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/keyboard_down_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ganesh_aarti2"
            android:id="@+id/text2"
            android:textStyle="bold"
            android:textSize="25sp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/ga_heading2"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/cornerview"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>






    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>